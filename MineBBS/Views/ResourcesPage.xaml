<Page
    x:Class="MineBBS.Views.ResourcesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24">
        <GridView>
            <GridView.ItemTemplate>
                <DataTemplate>
                    <Border Width="200" Height="260" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="8" Padding="12" Margin="8">
                        <StackPanel>
                            <Rectangle Height="120" Fill="LightGray" RadiusX="4" RadiusY="4"/>
                            <TextBlock Text="资源名称" FontWeight="Bold" Margin="0,8,0,0"/>
                            <TextBlock Text="作者名称" FontSize="12" Foreground="Gray"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Border Background="Orange" CornerRadius="4" Padding="4,2">
                                    <TextBlock Text="插件" FontSize="10" Foreground="White"/>
                                </Border>
                            </StackPanel>
                            <TextBlock Text="这里是资源的简介..." TextWrapping="Wrap" MaxLines="2" FontSize="12" Margin="0,8,0,0" Foreground="Gray"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </GridView.ItemTemplate>
            <x:String>Item 1</x:String>
            <x:String>Item 2</x:String>
            <x:String>Item 3</x:String>
            <x:String>Item 4</x:String>
            <x:String>Item 5</x:String>
        </GridView>
    </Grid>
</Page>
