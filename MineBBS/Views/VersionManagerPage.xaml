<Page
    x:Class="MineBBS.Views.VersionManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Grid>
        <muxc:NavigationView x:Name="NavView"
                             PaneDisplayMode="Left"
                             IsBackButtonVisible="Visible"
                             IsSettingsVisible="False"
                             IsPaneToggleButtonVisible="False"
                             BackRequested="NavView_BackRequested"
                             ItemInvoked="NavView_ItemInvoked">

            <muxc:NavigationView.MenuItems>
                <muxc:NavigationViewItem Content="添加游戏文件夹" Tag="AddFolder">
                    <muxc:NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE710;"/>
                    </muxc:NavigationViewItem.Icon>
                </muxc:NavigationViewItem>
            </muxc:NavigationView.MenuItems>

            <muxc:NavigationView.Content>
                <Grid Margin="12">
                    <!-- 分类面板：标题 + 列表自适应 -->
                    <Grid x:Name="CategoryPanel" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="CurrentVersionTitle"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,12"
                                   Grid.Row="0"/>

                        <ListView x:Name="CategoryList"
                                  Grid.Row="1"
                                  SelectionChanged="CategoryList_SelectionChanged"/>
                    </Grid>

                    <!-- 文件列表滚动区 -->
                    <ScrollViewer x:Name="FileScroll" Visibility="Collapsed" Margin="12">
                        <ItemsControl x:Name="FileItems"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"/>
                    </ScrollViewer>
                </Grid>
            </muxc:NavigationView.Content>
        </muxc:NavigationView>
    </Grid>
</Page>