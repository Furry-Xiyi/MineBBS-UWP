<Page
    x:Class="MineBBS.Views.WebViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 导航工具栏 -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlAcrylicElementBrush}" Padding="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 刷新按钮 -->
            <Button Grid.Column="2" 
                    x:Name="RefreshButton"
                    Click="RefreshButton_Click"
                    Margin="4,0">
                <SymbolIcon Symbol="Refresh"/>
            </Button>

            <!-- URL地址栏 -->
            <TextBox Grid.Column="3" 
                     x:Name="UrlTextBox"
                     IsReadOnly="True"
                     Margin="8,0"
                     VerticalAlignment="Center"
                     PlaceholderText="页面地址"
                     Background="{ThemeResource SystemControlBackgroundAltHighBrush}"/>

            <!-- 在浏览器打开 -->
            <Button Grid.Column="4" 
                    x:Name="OpenInBrowserButton"
                    Click="OpenInBrowserButton_Click"
                    Margin="4,0"
                    ToolTipService.ToolTip="在浏览器中打开">
                <SymbolIcon Symbol="Globe"/>
            </Button>
        </Grid>

        <!-- WebView2 容器 -->
        <Grid x:Name="DownloadOverlay" Grid.Row="1" Visibility="Visible">
            <Grid x:Name="DownloadContainer">
                <muxc:WebView2 x:Name="DownloadWebView"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Stretch"
                               NavigationStarting="DownloadWebView_NavigationStarting"
                               NavigationCompleted="DownloadWebView_NavigationCompleted"/>
            </Grid>

            <!-- 加载指示器 -->
            <Grid x:Name="LoadingPanel" 
                  Visibility="Collapsed"
                  Background="{ThemeResource SystemControlAcrylicWindowBrush}">
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center">
                    <muxc:ProgressRing IsActive="True" 
                                      Width="50" 
                                      Height="50"/>
                    <TextBlock Text="加载中..." 
                              Margin="0,12,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>